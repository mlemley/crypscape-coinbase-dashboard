<resources>

    <!-- Base application theme. -->
    <style name="CrypScape" parent="Theme.MaterialComponents">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorOnSurface">@color/colorOnSurface</item>
        <item name="colorSurface">@color/colorSurface</item>
        <item name="android:colorBackground">@color/colorPrimaryDark</item>
        <item name="android:textAppearance">@style/TextAppearance</item>
        <item name="android:windowBackground">@color/windowBackground</item>
    </style>

    <style name="CrypScape.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.MaterialComponents.Dark" />

    <style name="Widget.MaterialComponents.TabLayout" parent="CrypScape">
        <item name="enforceTextAppearance">false</item>
        <item name="enforceMaterialTheme">false</item>
        <item name="android:textAllCaps">true</item>
        <item name="tabPaddingStart">12dp</item>
        <item name="tabPaddingEnd">12dp</item>
        <item name="tabIndicatorHeight">2dp</item>
        <item name="android:background">@color/dashboard_background</item>
        <item name="tabIconTint">@color/tabs_icon_color_selector</item>
        <item name="tabIndicatorAnimationDuration">250</item>
        <item name="tabIndicatorColor">@color/tv_white</item>
        <item name="tabTextAppearance">@style/TextAppearance.TabItem</item>
        <item name="tabTextColor">@color/tabs_icon_color_selector</item>
        <item name="tabRippleColor">@null</item>
        <item name="tabUnboundedRipple">true</item>
    </style>

    <style name="Widget.MaterialComponents.BottomNavigationView" parent="CrypScape">
        <item name="enforceTextAppearance">true</item>
        <item name="enforceMaterialTheme">false</item>
        <item name="android:background">@color/colorSurface</item>
        <item name="itemBackground">@null</item>
        <item name="itemHorizontalTranslationEnabled">false</item>
        <item name="itemIconTint">@color/nav_item_tint</item>
        <item name="itemTextAppearanceInactive">?attr/textAppearanceCaption</item>
        <item name="itemTextAppearanceActive">?attr/textAppearanceCaption</item>
        <item name="itemTextColor">@color/nav_item_tint</item>
        <item name="itemRippleColor">@color/bluishGray</item>
    </style>


    <style name="TextAppearance" parent="TextAppearance.MaterialComponents.Body1">
        <item name="fontFamily">@font/avenir_book</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="TextAppearance.TabItem">
        <item name="fontFamily">@font/avenir_book</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="TextAppearance.Splash" />

    <style name="TextAppearance.Splash.Cryp">
        <item name="android:textSize">49.95sp</item>
        <item name="android:textColor">@color/tv_white</item>
        <item name="android:letterSpacing">.02</item>
        <item name="android:textAllCaps">true</item>
        <item name="fontFamily">@font/avenir_light</item>
    </style>

    <style name="TextAppearance.Splash.Scape">
        <item name="android:textSize">49.95sp</item>
        <item name="android:textColor">@color/tv_white</item>
        <item name="android:letterSpacing">.02</item>
        <item name="android:textAllCaps">true</item>
        <item name="fontFamily">@font/avenir_heavy</item>
    </style>

    <style name="CrypScape.Section" />

    <style name="TextAppearance.RealTime">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/tv_white</item>
        <item name="android:textAllCaps">false</item>
        <item name="fontFamily">@font/avenir_book</item>
    </style>

    <style name="TextAppearance.RealTime.CurrencyName" />

    <style name="TextAppearance.RealTime.CurrencyValue" />

    <style name="TextAppearance.RealTime.ChangePercentageUp">
        <item name="android:textColor">@color/aqua_marine</item>
    </style>

    <style name="TextAppearance.RealTime.ChangePercentageDown">
        <item name="android:textColor">@color/warm_pink</item>
    </style>

    <style name="TextAppearance.OrderBook.Ask" parent="TextAppearance">
        <item name="android:textColor">@color/warm_pink</item>
    </style>

    <style name="TextAppearance.OrderBook.Disabled" parent="TextAppearance">
        <item name="android:textColor">@color/foreground_disabled_order_book</item>
    </style>

    <style name="TextAppearance.OrderBook.Bid" parent="TextAppearance">
        <item name="android:textColor">@color/aqua_marine</item>
    </style>

    <style name="TextAppearance.OrderBook.Spread" parent="TextAppearance.AppCompat.Title" />

    <style name="Dashboard">
        <item name="android:background">@color/dashboard_background</item>
        <item name="android:paddingTop">@dimen/dashboard_padding_top</item>
        <item name="android:paddingBottom">@dimen/dashboard_padding</item>
        <item name="android:paddingStart">@dimen/dashboard_padding</item>
        <item name="android:paddingEnd">@dimen/dashboard_padding</item>
    </style>

    <style name="Dashboard.Section">
        <item name="android:background">@drawable/dashboard_section_background</item>
        <item name="android:padding">@dimen/dashboard_section_padding</item>
    </style>

    <style name="Dashboard.Section.Small">
        <item name="android:padding">8dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:paddingStart">0dp</item>
        <item name="android:paddingEnd">0dp</item>
    </style>


</resources>
